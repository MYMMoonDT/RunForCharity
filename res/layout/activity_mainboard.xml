<?xml version="1.0" encoding="utf-8"?>
<edu.tongji.runforcharity.layout.BidirSlidingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bidir_sliding_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/left_menu"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:visibility="invisible" >

        <LinearLayout
            android:id="@+id/leftcontentList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/leftMenuBack"
            android:cacheColorHint="#00000000"
            android:orientation="vertical"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/avatar"
                    android:src="@drawable/avatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/userName"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/homepage_menu" />
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/friendrank_menu" />
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/coinexchange_menu" />
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/charityexchange_menu" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/right_menu"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:visibility="invisible" >

        <LinearLayout
            android:id="@+id/rightcontentList"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/leftMenuBack"
            android:cacheColorHint="#00000000"
            android:orientation="vertical"
            android:scrollbars="none" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:contentDescription="@string/avatar"
                    android:src="@drawable/avatar" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="@string/userName"
                    android:textColor="#ffffff"
                    android:textSize="20sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/sporttask_menu" />
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/sporttarget_menu" />
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="55dp"
                    android:layout_margin="0dp"
                    android:src="@drawable/sportrecord_menu" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
	    android:id="@+id/content"
	    android:layout_width="fill_parent"
	    android:layout_height="fill_parent"
	    android:background="#e9e9e9"
	    android:orientation="vertical" >
	
	    <LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:background="#F0F0F0">
	
	        <ImageView
	            android:layout_width="45dp"
	            android:layout_height="45dp"
	            android:layout_margin="5dp"
	            android:src="@drawable/ic_launcher" >
	        </ImageView>
	    </LinearLayout>
	
	    <ListView
	        android:id="@+id/contentList"
	        android:layout_width="fill_parent"
	        android:layout_height="fill_parent"
	        android:cacheColorHint="#00000000"
	        android:scrollbars="none" >
	    </ListView>
	</LinearLayout>

</edu.tongji.runforcharity.layout.BidirSlidingLayout>